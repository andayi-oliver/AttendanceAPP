<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/login"
    tools:context=".Profile">

    <!-- Profile Picture -->
    <ImageView
        android:id="@+id/profile_picture"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/baseline_account_circle_24"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"/>

    <!-- Choose Picture Button -->
    <Button
        android:id="@+id/picture_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose_picture"
        android:layout_below="@id/profile_picture"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/blue"/>

    <!-- Username -->
    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/picture_button"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="Username"
        android:singleLine="true"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Date of Birth -->
    <EditText
        android:id="@+id/date_of_birth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/username"
        android:layout_marginStart="20dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="20dp"
        android:hint="Date of Birth"
        android:singleLine="true"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Year of Study -->
    <EditText
        android:id="@+id/year_of_study_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/date_of_birth"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:inputType="text|number"
        android:hint="Year of Study"
        android:singleLine="true"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Programme -->
    <EditText
        android:id="@+id/programme_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Programme"
        android:layout_below="@id/year_of_study_edit_text"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:singleLine="true"/>

    <!-- Save Button -->
    <Button
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/programme_edit_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/save"
        android:textAlignment="viewStart"
        android:textColor="@color/white"
        android:backgroundTint="@color/blue"/>

</RelativeLayout>
